@{
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    @if (ViewBag.SiteList != null)
    {
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Site List</h5>
                <pre>@ViewBag.SiteList</pre> <!-- This will display the raw JSON response -->
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4">No data found or error retrieving the site list.</div>
    }
</div>
